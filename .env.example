# Server Configuration
PORT=3000
NODE_ENV=development

# Request Configuration
REQUEST_TIMEOUT=10000
MAX_CONCURRENT_REQUESTS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log

# Security Configuration
CORS_ORIGIN=*
HELMET_ENABLED=true

# Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
SCRAPING_DELAY_MS=1000
MAX_RETRIES=3
BROWSER_CDP_SERVER=

# Proxy
PROXY_SERVER=http://domain.com:1234
PROXY_USERNAME=username
PROXY_PASSWORD=password

# Cache Configuration (if implementing caching)
CACHE_ENABLED=false
CACHE_TTL_SECONDS=300
REDIS_URL=redis://localhost:6379

# Database Configuration (if needed for future features)
# DATABASE_URL=postgresql://username:password@localhost:5432/productdb

# Feature Flags
ENABLE_HEALTH_CHECK=true
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=false
